{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update chart version in HelmChart custom resource",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate: HelmChart\\s+repo:\\s+\\\"?(?<registryUrl>[^\\s\"]*)\\\"?\\s+chart:\\s+\\\"?(?<depName>[^\\s\"]*)\\\"?\\s+version:\\s+\\\"?(?<currentValue>[^\\s\"]*)\\\"?"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "helm"
    },
    {
      "customType": "regex",
      "description": "Update chart version in separate CRD deploy script",
      "managerFilePatterns": [
        "/\\/deploy\\.sh$/"
      ],
      "matchStrings": [
        "# renovate: HelmChartCRD repo=(?<registryUrl>[^\\s]+)\\s+chart=(?<depName>[^\\s]+)\\s+kubectl apply -f https:\\/\\/raw.githubusercontent.com\\/[^\\/]+\\/[^\\/]+\\/v(?<currentValue>[^\\/]*)\\/"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "helm"
    },
    {
      "customType": "regex",
      "description": "Update versions in deploy scripts",
      "managerFilePatterns": [
        "/\\/deploy\\.sh$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?VERSION=\"?(?<currentValue>.*)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "description": "Update k3s version in upgrade plans",
      "managerFilePatterns": [
        "/\\/k3s-upgrade\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s* k3s\\s+version:\\s*\"?(?<currentValue>.*)\"?\\s"
      ],
      "datasourceTemplate": "github-release",
      "packageNameTemplate": "rancher/k3s",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
